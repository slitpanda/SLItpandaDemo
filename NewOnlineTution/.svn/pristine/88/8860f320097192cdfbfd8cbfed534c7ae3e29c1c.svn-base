}

.notice{
    background: #035696;
    color: white;
    border-radius: 0px 50px 50px 0px;
    padding: 5px;
    width: 200px;
}

.button {
    height: 50px;
    padding: 0px 30px 0px 30px;
    border: none;
    border-radius: 50px;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease 0s;
    cursor: pointer;
    outline: none;
}

.button:hover {

    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-7px);
}


.button:focus {outline:0;}


.cardposition{
