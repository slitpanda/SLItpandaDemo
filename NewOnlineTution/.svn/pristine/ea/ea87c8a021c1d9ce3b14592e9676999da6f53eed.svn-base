<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:th="http://www.thymeleaf.org">
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Dashboard -  Admin</title>
       
          <!-- Custom CSS -->

<link rel="stylesheet" href="/css/style.css">
<link href="/css/adminstyles.css" rel="stylesheet" />

<!-- Bootstrap CSS -->
<link rel="stylesheet"
	href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">


<script
	src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"
	crossorigin="anonymous"></script>
<script
	src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

<style type="text/css">
       @import url('https://fonts.googleapis.com/css2?family=Kanit&display=swap');
       body {
    font-family: 'Kanit', sans-serif;
          }
       </style>
       
      
             <script th:inline="javascript">

$(document).ready(function() {  
	
	 
	 /*<![CDATA[*/
	  teacherList= /*[[${teacherList}]]*/ "teacherList";
	  subjectList=/*[[${subjectList}]]*/ "subjectList";
	
	 /*]]>*/
	checkUserType();
	 //set date format
	setDateFormat();
	 
	 // set defualt class category & subject of user
	setUserDefaultCategoryAndSubject();
	 
	// get subject according to selected category
  getSubjectByCategoryId();

  validateStartTime();
        	
  validateEndTime();
		

	});
</script>
    </head>
    <body class="sb-nav-fixed" style="background-image: url('/img/a.jpg');">
    
     
    <!-- navigation -->
    <div class="fixed-top">
    	<div th:replace="sidebar::navigation"></div>
    	<div class="row" th:unless="${#request.userPrincipal.principal.userType=='data_entry' || #request.userPrincipal.principal.userType=='admin'} ">
			<div class="col-md-12 shadow-sm" style="background-color: white">
				<nav aria-label="breadcrumb" class="second ">
					<ol class="breadcrumb pl-4 pr-4 pb-0"
						style="background-color: white">
						<li class="breadcrumb-item "><a class="black-text "
							th:href="@{/wall}"><span class="mr-md-3 mr-2">Home</span></a><i
							class="fa fa-angle-double-right mt-1" aria-hidden="true"></i></li>
						<li class="breadcrumb-item "><a class="black-text  "
							 th:href="@{'/classes/'+${#request.userPrincipal.principal.id}}"><span class="mr-md-3 mr-2">My Classes</span></a><i
							class="fa fa-angle-double-right mt-1" aria-hidden="true"></i></li>
						<li class="breadcrumb-item "><a class="black-text  active-2"
							href="#" ><span >Add New Class</span></a></li>
					</ol>
				</nav>
			</div>
		</div>
	</div>
    	
        <div id="layoutSidenav">
        <!-- side bar -->
            <div th:replace="sidebar::sidebar"></div>
            
            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid "  id="mainDiv">
                  <!--start alert message -->	
					 <div class="alert alert-danger mt-2" th:if="${#httpServletRequest.getParameter('class')=='error'}" id="alertMsgBox" style="text-align: center;" >
				 
                 <span id="alertMsg" >Class Not Saved Try Again !</span> 
                 </div>
                 
                 
                 <!--end alert message -->	
              <form class="form-group " th:object="${classes}" th:action="@{/saveclass}" 	method="post">
<table class="table table-borderless col-md-8 m-auto">
<tr hidden="">
<td>Teacher Id</td>
<td><input type="text" id="hiddenTeacherId" th:field="*{teacherId}"></td>
</tr>
<tr>
<td>Class Category</td>
<td><select  id="clCategory" disabled="disabled"  class="form-control">
<option value="0">select category</option>
<option  th:each="clCatList:${categoryList}" th:value="${clCatList.clCategoryId}" th:text="${clCatList.stream +' '+ clCatList.medium} "></option>
</select>
<input  th:field="*{clCategoryId}" type="text" id="hiddenCatId" hidden="">
</td>
</tr>

<tr>
<td>Subject</td>
<td><select   id="subjects" disabled="disabled"  class="form-control"></select>
<input th:field="*{subjectId}" type="text" id="hiddenSubjectId" hidden=""></td>

</tr>

<tr>
<td>Description English</td>
<td><textArea th:field="*{descriptionEnglish}"  class="form-control"></textArea></td>
</tr>

<tr>
<td>Description Sinhala</td>
<td><textArea th:field="*{descriptionSinhala}"  class="form-control"></textArea></td>
</tr>

<tr>
<td>Date</td>
<td><input type="date" placeholder="dd-mm-yyyy" id="date"  class="form-control" min="1997-01-01"><input type="text" id="hiddenDate" hidden="" th:field="*{date}"></td>
</tr>

<tr>
<td>Start Time</td>
<td><input type="text" id="startTime" th:field="*{startTime}"  placeholder="Eg: 8:00 or 08:00" class="form-control"></td>
</tr>

<tr>
<td>End Time</td>
<td><input type="text" id="endTime" th:field="*{endTime}"  placeholder="Eg: 1.00  or 13:00" readonly="readonly"  class="form-control"></td>
</tr>

<tr>
<td>Ammount</td>
<td><input type="number" th:field="*{amount}"  class="form-control"></td>
</tr>

<tr>
<td></td>
<td><input type="submit" value="add" class="btn btn-success col-md-5" id="btnAdd"></td>
</tr>
</table>
</form>
 


				</div>
                </main>
                 <!-- footer -->
            <div  th:replace="footer::footer" >
                
            </div>
                <!-- /footer -->
            </div>
        </div>
      
           
            
           
       
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js">
        </script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js">
        </script>
        <script  th:src="@{/js/scripts.js}"></script>
     <script src="js/classes.js"></script>
      
    </body>
</html>
