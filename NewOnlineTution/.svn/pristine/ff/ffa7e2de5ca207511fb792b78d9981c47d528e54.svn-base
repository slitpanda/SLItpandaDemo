@import url('https://fonts.googleapis.com/css2?family=Kanit&display=swap');

html ,body {
    font-family: 'Kanit', sans-serif;
    height: 100%;
    margin: 0;
}

body::-webkit-scrollbar {
    margin-left: 30px;
    float: left;
    width: 8px;
    background: #fff;
    overflow-y: scroll;
    margin-bottom: 25px;
}

body::-webkit-scrollbar-track {
    box-shadow: inset 0 0 6px rgba(0, 0, 0, 0.3);
}

body::-webkit-scrollbar-thumb {
    outline: 1px solid slategrey;
    background-color: #4285F4;
    border-radius: 10px;
}

@media only screen and (min-width: 768px) {
    .navbar .navbar-header  img {
        height: 90px;
    }
    .navbar {
        min-height: 90px;
    }

}

@media   (max-width: 768px) {
    .navbar .navbar-header  img {
        height: 55px;
    }
    .navbar {
        min-height: 55px;
    }

}

#page-content {
    flex: 1 0 auto;
}

#sticky-footer {
    flex-shrink: none;
}

.notice{
    background: #035696;
    color: white;
    border-radius: 0px 50px 50px 0px;
    padding: 5px;
    width: 200px;
}

.button {
    height: 50px;
    padding: 0px 30px 0px 30px;
    border: none;
    border-radius: 50px;
    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease 0s;
    cursor: pointer;
    outline: none;
}

.button:hover {

    box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.1);
    transform: translateY(-7px);
}


.button:focus {outline:0;}


.cardposition{
    border-radius: 20px;
    background-color: rgba(0,0,0,0.1) !important;
}
.param {
    margin-bottom: 7px;
    line-height: 1.4;
}
.param-inline dt {
    display: inline-block;
}
.param dt {
    margin: 0;
    margin-right: 7px;
    font-weight: 600;
}
.param-inline dd {
    vertical-align: baseline;
    display: inline-block;
}

.param dd {
    margin: 0;
    vertical-align: baseline;
} 

.shopping-cart-wrap .price {
    color: #007bff;
    font-size: 18px;
    font-weight: bold;
    margin-right: 5px;
    display: block;
}
var {
    font-style: normal;
}

.media img {
    margin-right: 1rem;
}
.img-sm {
    width: 90px;
    object-fit: cover;
}



/* new styles -------------------------------------------------*/

.vertical-center {
  margin: 0;
  position: absolute;
  top: 50%;
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
}


/* update buttons */
@media   (max-width: 768px) {
   
    #btnUpdate{
    font-size:15px;
    }

}

/*For Breadcum Start*/
@media (max-width: 576px) { 
    .topSize {
        margin-top: 70px;
    }
}
@media (min-width: 577px) {  
    .topSize {
        margin-top: 100px;
    }
}

.second a:hover {
    color: rgb(0, 183, 255) !important
}

.active-2 {
    color: rgb(0, 183, 255) !important
}

.second span:hover {
    padding-bottom: 16px !important;
    border-bottom: 3px solid rgb(0, 183, 255) !important
}

.breadcrumb>li+li:before {
    content: "" !important
}

.breadcrumb {
    padding: 15px 0px 0px 0px ;
    font-size: 14px;
    color: #aaa !important;
    letter-spacing: 0.5px;
    border-radius: 5px !important
}

a {
    text-decoration: none !important;
    color: #aaa !important
}

a:focus,
a:active {
    outline: none !important;
    box-shadow: none !important
}

.fixed-top{
	z-index: 1039;
}

/*For Breadcum End*/
 

